<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <!--<context:component-scan base-package="ru.innopolis.uni.course3.service"/>-->
    <bean id="BookService" class="ru.innopolis.uni.course3.service.BookServiceImpl">
        <constructor-arg ref="BookRepository"/>
    </bean>
    <bean id="PasswordAuthentication" class="ru.innopolis.uni.course3.service.PasswordAuthentication" />
    <bean id="UserService" class="ru.innopolis.uni.course3.service.UserServiceImpl">
        <constructor-arg index="0" ref="UserRepository"/>
        <constructor-arg index="1" ref="PasswordAuthentication"/>
    </bean>

</beans>

